<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11CFC5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khatabook.Login" >

    <LinearLayout
        android:id="@+id/linerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_edge"
        android:orientation="vertical"        
        android:layout_marginTop="50dp"        
        >

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linerLayout1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:ems="12"
        android:inputType="textEmailAddress" 
        android:hint="UserName or Email ID"
        >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/linerLayout1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:hint="Password"
         />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edge_btn"
        android:text="Login"
        android:textColor="@android:color/white"        
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"        
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        
         />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linerLayout1"
        android:layout_alignTop="@+id/imageView1"
        android:text="Already \nKhatabook \nMember ? \nLet&apos;s login"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linerLayout1"
        android:layout_toRightOf="@+id/tv_msg1"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="14dp"
        android:text="विपत्रपुस्त - Khatabook"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>